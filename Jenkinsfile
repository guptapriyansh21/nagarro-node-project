pipeline{

  agent any
  
  stages {
  
    stage("build") {
            
            steps {
                echo 'build the application'
                echo 'hello'
                  }
            }
            
      stage("test") {
            
            steps {
                echo 'testing the application'
                  }
            }  
            
        stage("deploy") {
            
            steps {
                echo 'deployingthe application'
                  }
            }
      }
  }
